{
	"compilerOptions": {
		"target": "es2019",
		"lib": [
			"es6"
		],
		"module": "commonjs",
		"rootDir": "src",
		"resolveJsonModule": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules"
	]
}